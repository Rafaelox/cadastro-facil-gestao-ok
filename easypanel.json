{
  "name": "sistema-gestao-comunicacao",
  "source": {
    "type": "git",
    "url": "https://github.com/seu-usuario/sistema-gestao-comunicacao.git",
    "branch": "main"
  },
  "build": {
    "type": "dockerfile",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "port": 80,
    "healthcheck": {
      "path": "/",
      "interval": 30,
      "timeout": 10,
      "retries": 3
    },
    "resources": {
      "memory": "512Mi",
      "cpu": "0.5"
    }
  },
  "domains": [
    {
      "name": "sistema-gestao.exemplo.com",
      "ssl": true
    }
  ],
  "environment": {
    "NODE_ENV": "production"
  },
  "scaling": {
    "minReplicas": 1,
    "maxReplicas": 3,
    "targetCPU": 70
  },
  "monitoring": {
    "metrics": true,
    "logs": true,
    "alerts": {
      "cpu": 80,
      "memory": 80,
      "errorRate": 5
    }
  }
}